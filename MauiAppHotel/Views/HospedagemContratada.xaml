<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray300}">

    <ScrollView>
        <VerticalStackLayout Padding="10"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" >

            <Label Text="{Binding QuartoSelecionado.Descricao}"
                   FontFamily="Frede"
                   FontSize="50"
                   TextColor="{StaticResource Primary}"
                   HorizontalTextAlignment="Center" />

            <Frame Padding="15"
                   Margin="0,20,0,0"
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True">
                <Grid ColumnDefinitions="*, *"
                      RowDefinitions="Auto, Auto"
                      ColumnSpacing="20"
                      RowSpacing="10">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"
                           FontFamily="Vibes"
                           FontSize="25"
                           TextColor="{StaticResource Primary}" />
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding QntAdultos}"
                           FontSize="20"
                           TextColor="Red"
                           HorizontalOptions="Start" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"
                           FontFamily="Vibes"
                           FontSize="25"
                           TextColor="{StaticResource Primary}" />
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding QntCriancas}"
                           FontSize="20"
                           TextColor="Red"
                           HorizontalOptions="Start" />
                </Grid>
            </Frame>

            <Frame Padding="15"
                   Margin="0,20,0,0"
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Período da Estadia"
                           HorizontalTextAlignment="Center"
                           FontFamily="Frede"
                           FontSize="23"
                           TextColor="Red" />

                    <Grid ColumnDefinitions="*, *, *"
                          RowDefinitions="Auto, Auto"
                          ColumnSpacing="10"
                          Margin="10">

                        <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" 
                               TextColor="{StaticResource Primary}"
                               FontFamily="Vibes"
                               FontSize="25"
                               HorizontalTextAlignment="Center"/>
                        
                        <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" 
                               TextColor="{StaticResource Primary}"
                               FontFamily="Vibes"
                               FontSize="25"
                               HorizontalTextAlignment="Center"/>
                        
                        <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" 
                               TextColor="{StaticResource Primary}"
                               FontFamily="Vibes"
                               FontSize="25"
                               HorizontalTextAlignment="Center"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}" TextColor="Red" HorizontalTextAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}" TextColor="Red" HorizontalTextAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="2" Text="{Binding Estadia}" TextColor="Red" HorizontalTextAlignment="Center"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <Frame Padding="15"
                   Margin="0,20,0,0"
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True">
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Label Text="Valor Total: "
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Primary}" />
                    <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}"
                           FontSize="20"
                           TextColor="Red" />
                </HorizontalStackLayout>
            </Frame>

            <Button Text="Voltar"
                    Margin="10,30,10,0"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
